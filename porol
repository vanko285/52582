import random
import string
from typing import List

class PasswordGenerator:
    def __init__(self):
        self.lowercase = string.ascii_lowercase
        self.uppercase = string.ascii_uppercase
        self.digits = string.digits
        self.symbols = "!@#$%^&*()_+-=[]{}|;:,.<>?"
    
    def generate_password(self, length: int = 12, use_uppercase: bool = True, 
                         use_digits: bool = True, use_symbols: bool = True) -> str:
        """
        Генерация случайного пароля
        """
        characters = self.lowercase
        
        if use_uppercase:
            characters += self.uppercase
        if use_digits:
            characters += self.digits
        if use_symbols:
            characters += self.symbols
        
        # Гарантируем наличие хотя бы одного символа из каждой выбранной категории
        password = []
        
        if use_uppercase:
            password.append(random.choice(self.uppercase))
        if use_digits:
            password.append(random.choice(self.digits))
        if use_symbols:
            password.append(random.choice(self.symbols))
        
        # Заполняем оставшуюся длину
        remaining_length = length - len(password)
        password.extend(random.choice(characters) for _ in range(remaining_length))
        
        # Перемешиваем пароль
        random.shuffle(password)
        
        return ''.join(password)
    
    def generate_multiple_passwords(self, count: int = 5, **kwargs) -> List[str]:
        """
        Генерация нескольких паролей
        """
        return [self.generate_password(**kwargs) for _ in range(count)]

# Пример использования
if __name__ == "__main__":
    generator = PasswordGenerator()
    
    # Простой пароль
    simple_password = generator.generate_password(length=8, use_symbols=False)
    print(f"Простой пароль: {simple_password}")
    
    # Сложный пароль
    strong_password = generator.generate_password(length=16)
    print(f"Сложный пароль: {strong_password}")
    
    # Несколько паролей
    passwords = generator.generate_multiple_passwords(count=3, length=12)
    print("\nНесколько паролей:")
    for i, pwd in enumerate(passwords, 1):
        print(f"{i}. {pwd}")
